@model RestaurantReservationAPI.Models.Customer

<div class="container my-5" style="background-color: var(--gold); color: var(--black); padding: 30px; border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    <h2 class="text-center" style="font-size: 1.8rem; color: var(--black);">Delete Customer</h2>

    <h3 class="text-center">Are you sure you want to delete this customer?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Customer Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Phone Number
            </dt>
            <dd class="col-sm-10">
                @Model.PhoneNumber
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CustomerID" />
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-danger" style="background-color: var(--black); color: var(--gold);">Delete</button>
                <a asp-action="Index" class="btn btn-secondary" style="margin-left: 10px;">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Theme Colors */
    :root {
        --gold: #d4af37; /* Gold color */
        --black: #000000; /* Black color */
    }

    .btn-danger {
        background-color: var(--black);
        color: var(--gold);
    }

    .btn-danger:hover {
        background-color: #333333;
        color: #fff;
    }
</style>
