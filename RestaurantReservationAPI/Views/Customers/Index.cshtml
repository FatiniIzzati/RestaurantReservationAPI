@model IEnumerable<RestaurantReservationAPI.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<div class="container my-5" style="background-color: var(--gold); color: var(--black); padding: 20px; border-radius: 10px;">
    <center><h2>Customers List</h2></center><br />
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>
                        <a class="btn btn-primary btn-sm me-2" asp-action="Edit" asp-route-id="@customer.CustomerID">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@customer.CustomerID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row mt-3">
        <div class="col text-end">
            <a class="btn" style="background-color: var(--black); color: var(--gold);" asp-action="Create">Add New Customer</a>
        </div>
    </div>
</div>

<style>
    /* Theme Colors */
    :root {
        --gold: #d4af37; /* Gold color */
        --black: #000000; /* Black color */
    }
</style>
