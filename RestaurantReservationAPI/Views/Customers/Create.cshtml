@model RestaurantReservationAPI.Models.Customer

<br /><br />
<div class="form-box" style="max-width: 600px; margin: auto; background-color: var(--gold); padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2 class="text-center" style="font-size: 1.8rem; color: var(--black);">Create New Customer</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-dark" style="background-color: var(--black); color: var(--gold);">Create</button>
            <a asp-action="Index" class="btn btn-secondary" style="margin-left: 10px;">Cancel</a>
        </div>
    </form>
</div>
