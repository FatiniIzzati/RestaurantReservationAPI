@model IEnumerable<RestaurantReservationAPI.Models.Reservation>
@{
    ViewData["Title"] = "Reservations";
}

<div class="container my-5" style="background-color: var(--gold); color: var(--black); padding: 20px; border-radius: 10px;">
    <center><h2>Reservation List</h2></center><br />
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Table Number</th>
                <th>Date and Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.TableNumber</td>
                    <td>@reservation.Date.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a class="btn btn-primary btn-sm me-2" asp-action="Edit" asp-route-id="@reservation.ReservationID">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@reservation.ReservationID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row mt-3">
        <div class="col text-end">
            <a class="btn" style="background-color: var(--black); color: var(--gold);" asp-action="Create">Add New Reservation</a>
        </div>
    </div>
</div>

<style>
    /* Theme Colors */
    :root {
        --gold: #d4af37; /* Gold color */
        --black: #000000; /* Black color */
    }
</style>
